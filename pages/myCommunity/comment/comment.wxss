  font-size: 48rpx;
}

.top_title {
  font-weight: bold;
  width: 200rpx;
  overflow: hidden;
}

.music {
  margin-left: 50rpx;
  font-size: 32rpx;
}

.play_btn {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  /* background: #181818; */
}

.content_top .date {
  font-size: 36rpx;
}

.content_context .text {
  padding: 20rpx 30rpx;
  text-indent: 2rem;
  font-size: 38rpx;
}


.content_sound {
  display: flex;
  justify-content: flex-end;
