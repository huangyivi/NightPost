/* pages/myCommunity/dreamArticle/dreamArticle.wxss */
/* 顶部样式 */
/* 1px = 2rpx */
@import "../../../app.wxss";

page {
  background-color: #F8F8F8;
  font-family: 'Source Han Serif CN' !important;
}

.navi-top {
  background-color: #F8F8F8;
  top: 0;
  box-sizing: border-box;
  padding-left: 64rpx;
  padding-right: 64rpx;
  position: fixed;
  width: 100vw;
  font-size: 44rpx;
  font-weight: 500;
  line-height: 62rpx;
  color: #181818;
  opacity: 1;
}


.main {
  box-sizing: border-box;
  height: 100%;
  width: 100vw;
  margin-bottom: 200rpx;
}

.main-content {
  width: 100%;
  height: 100%;
  /* background: linear-gradient(#fff 80%,transparent); */
  background: #fff;
}


.navi-bottom {
  background-color: #F8F8F8;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  padding: 0 64rpx;
  height: 240rpx;
  width: 100vw;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navi-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.3);
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
  width: 56rpx;
  height: 56rpx;
}

.navi-btn-active {
  width: 112rpx;
  height: 112rpx;
  background-color: rgba(0,0,0,0.1);
}

.content_top {
  padding: 40rpx 30rpx;
  font-size: 48rpx;
}

.content_top .top_date {
  width: 130rpx;
  height: 130rpx;
  font-weight: bold;
  position: relative;
}

.top_date > view {
  position: absolute;
}

.top_date .month {
  top: 0;
  left: 0;
}

.top_date .decoration {
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);

}

.top_date .day {
  bottom: 0;
  right: 0;
}

.top_pic {
  width: 150rpx;
  height: 150rpx;
  background: #ACACAC;
}

.content_introduce {
  margin-top: 40rpx;
}

.content_introduce image{
  width: 100%;
  height: 400rpx;
  background: #E6E6E6;
}

.content_introduce .title {
  margin-top: -60rpx;
  margin-left: 100rpx;
  font-size: 60rpx;
  font-weight: bold;
}

.content_introduce .text {
  padding: 50rpx;
  text-indent: calc(1rem + 50rpx);
}

.content_sound {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 30rpx;
}

.sound_play {
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sound_play:not([size='mini']){
  width: 200rpx;
  margin: 0;
  margin-right: 30rpx;
}

.sound_bg {
  width: 60rpx;
  height: 60rpx;
  background: #181818;
}

.content_bottom {
  padding: 50rpx;
  font-size: 32rpx;
  color: #ACACAC;
}

.tag {
  margin-left: 30rpx;
}

.bottom_bg {
  width: 30rpx;
  height: 30rpx;
  background: #ACACAC;
}

.bottom_tip {
  margin-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
}

.bottom_tip text {
  display: inline-block;
  transform: rotate(90deg);
}

