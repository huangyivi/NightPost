/* pages/myCommunity/listView/listView.wxss */
/* 顶部样式 */
/* 1px = 2rpx */
@import "../../../app.wxss";

page {
  background-color: #F8F8F8;
  font-family: 'Source Han Serif CN' !important;
}

.navi-top {
  background-color: #F8F8F8;
  top: 0;
  box-sizing: border-box;
  padding-left: 64rpx;
  padding-right: 64rpx;
  position: fixed;
  width: 100vw;
  font-size: 44rpx;
  font-weight: 500;
  line-height: 62rpx;
  color: #181818;
  opacity: 1;
}


.main {
  box-sizing: border-box;
  height: auto;
  width: 100vw;
  margin-bottom: 200rpx;
}

.main-content {
  width: 100%;
  height: 100%;
  background: linear-gradient(#fff 80%,transparent);
  /* padding: 30rpx 45rpx; */
  box-sizing: border-box;
}

.content_top {
  font-size: 48rpx;
  padding: 60rpx 45rpx;
  color: #181818;
}

.content_select {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.content_tag {
  font-size: 32rpx;
  color: #ACACAC;
}

.content_pic {
  /* margin-left: 50rpx; */
  width: 52rpx;
  height: 52rpx;
  background: #ACACAC;
}

view.hr {
  margin: 0 auto;
  width: 70%;
  height: 1rpx;
  background: #E3E3E3;
}

.content_item {
  padding: 60rpx 45rpx;
  margin: 20rpx 0;
}

.content_item .title {
  font-size: 48rpx;
  color: #181818;
}

.tip view {
  font-size: 36rpx;
  color: #ACACAC;
}

.tip .tag {
  margin-left: 20rpx;
}

.content_item .to_detail {
  font-size: 48rpx;
}

.navi-bottom {
  background-color: #F8F8F8;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  padding: 0 64rpx;
  height: 240rpx;
  width: 100vw;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.navi-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0,0,0,0.3);
  font-size: 30rpx;
  font-weight: 500;
  line-height: 42rpx;
  width: 56rpx;
  height: 56rpx;
}

.navi-btn-active {
  width: 112rpx;
  height: 112rpx;
  background-color: rgba(0,0,0,0.1);
}