/* 顶部样式 */
@import "../../../app.wxss";

page {
  background-color: #F8F8F8;
  font-family: 'KaiTi' !important;
}


.navi-top {
  background-color: #F8F8F8;
  top: 0;
  box-sizing: border-box;
  padding-left: 64rpx;
  padding-right: 64rpx;
  position: fixed;
  width: 100vw;
  font-size: 44rpx;
  font-weight: 500;
  line-height: 62rpx;
  color: #181818;
  opacity: 1;
}


.main {
  box-sizing: border-box;
  height: 100vh;
  width: 100vw;
}

.main-header {
  height: 88rpx;
  width: 100%;
}

.main-date {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 40rpx;
  color: #7B7B7B;
  opacity: 1;
}



.main-content {
  box-sizing: border-box;
  position: relative;
  height: calc(100% - 88rpx);
  width: 100%;
  background: linear-gradient(225deg, transparent 48rpx, #fff 0);
  padding: 48rpx 32rpx;
}

.main-content::after {
  content: "";
  position: absolute;
  right: 0;
  top: 0;
  background: linear-gradient(-135deg, transparent 50%, rgba(112, 112, 112, 0.1) 0);
  border-bottom: 1px rgba(112, 112, 112, 0.5) solid;
  border-left: 1px rgba(112, 112, 112, 0.5) solid;
  width: 68rpx;
  height: 68rpx;
}

.main-title {
  width: 100%;
  height: 60rpx;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 50rpx;
  color: #7B7B7B;
  opacity: 1;
  border-bottom: 1px solid #DDDDDD;
  margin-bottom: 20rpx;
}

.main-detail {
  width: 100%;
  height: 464rpx;
  font-size: 34rpx;
  font-weight: 400;
  line-height: 50rpx;
  color: #ACACAC;
  opacity: 1;
}


.main-function {
  margin-left: -32rpx;
  width: calc( 100% + 64rpx);
  height: 200rpx;
  box-sizing: border-box;
  padding-left: 32rpx;
  border-bottom : 2rpx solid rgba(0,0,0,0.2)
}

.main-func {
  
  margin-right: 40rpx;
  color: #000000;
  width: 128rpx;
  height: 128rpx;
  /* background : rgba(0, 0, 0, 0.5); */
  opacity: 0.5;
  /* border: 2rpx solid #000000; */
}



.main-select {
  width: 100%;
}

.select-item {
  width: 100%;
  height: 110rpx;
  border-bottom: 2rpx rgba(0, 0, 0, 0.1) solid;
}


.select-icon {
  width: 64rpx;
  height: 64rpx;
  /* background: #D2D2D2; */
  margin-right: 20rpx;
}

.select-text {
  font-size: 34rpx;
  font-family: KaiTi;
  font-weight: 400;
  line-height: 50rpx;
  color: #181818;
  opacity: 1;
}

.select-info {
  font-size: 34rpx;
  font-family: KaiTi;
  font-weight: 400;
  line-height: 50rpx;
  color: #7B7B7B;
  opacity: 1;
  margin-right: 20rpx;
}


